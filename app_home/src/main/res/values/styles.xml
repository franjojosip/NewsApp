<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="text_margin_horizontal">
        <item name="android:layout_marginStart">16dp</item>
        <item name="android:layout_marginEnd">16dp</item>
    </style>

    <style name="RoundedTopCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/TopCardViewCorners</item>
    </style>

    <style name="RoundedBottomCardView" parent="@style/Widget.MaterialComponents.CardView">
        <item name="shapeAppearanceOverlay">@style/BottomCardViewCorners</item>
    </style>
    <style name="TopCardViewCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">5dp</item>
        <item name="cornerSizeTopLeft">5dp</item>
        <item name="cornerSizeBottomRight">0dp</item>
        <item name="cornerSizeBottomLeft">0dp</item>
    </style>
    <style name="BottomCardViewCorners" parent="">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSizeTopRight">0dp</item>
        <item name="cornerSizeTopLeft">0dp</item>
        <item name="cornerSizeBottomRight">5dp</item>
        <item name="cornerSizeBottomLeft">5dp</item>
    </style>

</resources>